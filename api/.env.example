# ProNet API - Variables d'environnement

# Base de donn√©es PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/pronet?schema=public"

# JWT
JWT_SECRET="votre-secret-jwt-super-securise-changez-moi"
JWT_REFRESH_SECRET="votre-refresh-secret-jwt-super-securise"
JWT_EXPIRES_IN="15m"
