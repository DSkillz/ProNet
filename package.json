{
  "name": "pronet",
  "version": "0.1.0",
  "private": true,
  "description": "ProNet - Le rÃ©seau professionnel open-source",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd api && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd api && npm run build",
    "build:web": "cd web && npm run build",
    "install:all": "npm install && cd api && npm install && cd ../web && npm install",
    "db:push": "cd api && npm run db:push",
    "db:studio": "cd api && npm run db:studio"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
